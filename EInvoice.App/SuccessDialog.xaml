<Window x:Class="EInvoice.App.SuccessDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EInvoice.App"
        mc:Ignorable="d"
        Title="Erfolg" Height="220" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="✓" FontSize="24" Foreground="Green" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Die E-Rechnung wurde erfolgreich erstellt." FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
        
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Margin="0,0,0,10">
                <Run Text="PDF-Datei: "/>
                <Hyperlink x:Name="PdfPathHyperlink" Click="PdfPathHyperlink_Click">
                    <TextBlock x:Name="PdfPathLinkText" Text="invoice.pdf" TextWrapping="Wrap"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SendEmailButton" Content="Versende Email" Width="100" Height="30" Margin="0,0,10,0" Click="SendEmailButton_Click"/>
            <Button x:Name="CloseButton" Content="Schließen" Width="80" Height="30" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>