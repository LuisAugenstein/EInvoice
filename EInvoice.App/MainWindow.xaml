<Window x:Class="EInvoice.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EInvoice.App"
        mc:Ignorable="d"
        Title="E-Rechnung" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Rechnungsnummer -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsnummer:" Width="150" VerticalAlignment="Center"/>
            <TextBox x:Name="InvoiceNumberTextBox" Width="200" VerticalAlignment="Center" PreviewTextInput="InvoiceNumberTextBox_PreviewTextInput"/>
        </StackPanel>

        <!-- Rechnungsdatum -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsdatum:" Width="150" VerticalAlignment="Center"/>
            <DatePicker x:Name="InvoiceDatePicker" Width="200" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Rechnungsempfänger -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsempfänger:" Width="150" VerticalAlignment="Center"/>
            <ComboBox x:Name="CustomerComboBox" Width="200" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Positionen Header -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,20,0,10">
            <Label Content="Positionen:" FontSize="16" FontWeight="Bold"/>
        </StackPanel>

        <!-- Scrollable area for positions and add button -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainContentPanel">
                <!-- Positionen List -->
                <StackPanel x:Name="PositionsPanel" Margin="0,0,0,10"/>
                
                <!-- Add Position Button (centered) -->
                <StackPanel x:Name="AddButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <Button x:Name="AddPositionButton" Content="+" Width="30" Height="30" Click="AddPositionButton_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Speichern" Width="100" Height="30" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Abbrechen" Width="100" Height="30" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
