<Window x:Class="EInvoice.App.EInvoiceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EInvoice.App"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="E-Rechnung" Height="600" Width="800">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="10" d:DataContext="{d:DesignInstance Type=local:EInvoiceViewModel, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Rechnungsnummer -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsnummer:" Width="150" VerticalAlignment="Center" />
            <TextBox Width="300" VerticalAlignment="Center"
                     Text="{Binding InvoiceNumber }" />
        </StackPanel>

        <!-- Rechnungsdatum -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsdatum:" Width="150" VerticalAlignment="Center" />
            <DatePicker Width="300" VerticalAlignment="Center"
                        SelectedDate="{Binding InvoiceDate, Mode=TwoWay}" />
        </StackPanel>

        <!-- Rechnungsempfänger -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Rechnungsempfänger:" Width="150" VerticalAlignment="Center" />
            <ComboBox Width="300" VerticalAlignment="Center"
                      ItemsSource="{Binding CustomerNames}"
                      SelectedItem="{Binding SelectedCustomerName, Mode=TwoWay}" />
        </StackPanel>

        <!-- Positionen Header -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,20,0,10">
            <Label Content="Positionen:" FontSize="16" FontWeight="Bold" />
        </StackPanel>

        <!-- Scrollable area for positions and add button -->
        <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="MainContentPanel">
                <ItemsControl ItemsSource="{Binding Positions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray"
                                    BorderThickness="1"
                                    Margin="0,0,0,10"
                                    Padding="10">
                                <StackPanel Orientation="Horizontal">

                                    <!-- Name field -->
                                    <Label Content="Name:" Width="80" VerticalAlignment="Center" />
                                    <TextBox Width="150"
                                             Margin="0,0,10,0"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

                                    <!-- Quantity field -->
                                    <Label Content="Anzahl:" Width="80" VerticalAlignment="Center" />
                                    <TextBox Width="80"
                                             Margin="0,0,10,0"
                                             VerticalContentAlignment="Center"
                                             HorizontalContentAlignment="Right"
                                             Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" />

                                    <!-- NetUnitPrice field -->
                                    <Label Content="Betrag (€):" Width="80" VerticalAlignment="Center" />
                                    <TextBox Width="100"
                                             Margin="0,0,10,0"
                                             VerticalContentAlignment="Center"
                                             HorizontalContentAlignment="Right"
                                             Text="{Binding NetUnitPrice, UpdateSourceTrigger=PropertyChanged}" />

                                    <!-- Remove button -->
                                    <Button Content="🗑"
                                            Width="30"
                                            Height="30"
                                            Background="Red"
                                            Foreground="White"
                                            ToolTip="Position entfernen"
                                            FontWeight="Bold"
                                            Command="{Binding DataContext.DeletePositionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!-- Add Position Button (centered) -->
                <StackPanel x:Name="AddButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center"
                            Margin="0,0,0,10">
                    <Button Content="+" Width="30" Height="30"
                            Command="{Binding AddPositionCommand}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,00,0"
                        Visibility="{Binding CreatingEInvoice, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBlock Text="Erstelle E-Rechnung..." VerticalAlignment="Center" />
                <ProgressBar Width="300" Height="20" IsIndeterminate="True" Margin="10,0,10,0" />
            </StackPanel>
            <Button Content="E-Rechnung erstellen" Width="150" Height="30" Margin="0,0,10,0"
                    Command="{Binding CreateEInvoiceCommand}" />
        </StackPanel>
    </Grid>
</Window>